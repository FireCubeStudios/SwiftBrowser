<Page
    x:Class="SwiftBrowser.SettingsViews.PrivacySettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SwiftBrowser.SettingsViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <Canvas x:Name="Container" HorizontalAlignment="Right" Margin="50,80,170,0" >

            <Image x:Name="FirstGear" Source="ms-appx:///Assets/Gear.png" Width="100" Height="100"/>

        </Canvas>
        <ToggleSwitch Header="Store timeline and history" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left" OffContent="Disabled" OnContent="Enabled" x:Name="privacyToggleHistory" Toggled="PrivacyToggleHistory_Toggled"></ToggleSwitch>
    </Grid>
</Page>
