                                <MenuFlyoutItem Text="What's new"/>
                                <MenuFlyoutItem Text="About"/>
                            </MenuFlyoutSubItem>
                            <MenuFlyoutItem Text="Exit" />
                        </MenuFlyout>-->
                    </Button.Flyout>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE713;" />
                </Button>
            </StackPanel>
            <controls:TeachingTip x:Name="ZoomTip"
                                  IsLightDismissEnabled="True"
                                  Canvas.ZIndex="3000"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
	Title="Zoom">
                <controls:TeachingTip.IconSource>
                    <controls:SymbolIconSource Symbol="Zoom" />
                </controls:TeachingTip.IconSource>
                <controls:TeachingTip.Content>
                    <Slider Minimum="-75" Maximum="90" Value="0" ValueChanged="ZoomSlider_ValueChanged" SnapsTo="Ticks" TickFrequency="1"/>
                </controls:TeachingTip.Content>
            </controls:TeachingTip>
            <controls:TeachingTip x:Name="FindTip"
                              CloseButtonClick="FindTip_CloseButtonClick"
                                  Canvas.ZIndex="3000"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
	Title="Find in page">
                <controls:TeachingTip.IconSource>
                    <controls:SymbolIconSource Symbol="Find" />
                </controls:TeachingTip.IconSource>
                <controls:TeachingTip.Content>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <AutoSuggestBox x:Name="HighlightTerm" PlaceholderText="Enter text to search" Width="250" Margin="10" QueryIcon="Find" QuerySubmitted="HighlightTerm_QuerySubmitted"/>
                        <Button Click="ClearHighlights" Content="Clear" Margin="10"/>
                    </StackPanel>
                </controls:TeachingTip.Content>
            </controls:TeachingTip>
            <controls:TeachingTip x:Name="ReadTip"
                              CloseButtonClick="ReadTip_CloseButtonClick"
                                  Canvas.ZIndex="3000"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
	Title="ReadAloud">
                <controls:TeachingTip.IconSource>
                    <controls:SymbolIconSource Symbol="Volume" />
                </controls:TeachingTip.IconSource>
                <controls:TeachingTip.Content>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ToggleSwitch Header="Toggle read aloud" OffContent="Paused" OnContent="Playing" IsOn="True" Toggled="ReadingSwitch_Toggled"/>
                    </StackPanel>
                </controls:TeachingTip.Content>
            </controls:TeachingTip>
            <Grid x:Name="PrintPanel">

            </Grid>
        </Grid>
        <ContentDialog
           x:Name="TaskMNG"
        Title="Browser Task Manager"
        CloseButtonText="Close"
        DefaultButton="Close">

            <StackPanel Orientation="Vertical"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TextBlock>Cpu:</TextBlock>
                <TextBlock Margin="30, 10, 0, 10" x:Name="CpuUsage"></TextBlock>
                <TextBlock>Disk:</TextBlock>
                <TextBlock Margin="30, 10, 0, 10" x:Name="DiskUsage"></TextBlock>
                <TextBlock Margin="30, 10, 0, 10" x:Name="XDiskUsage"></TextBlock>
                <TextBlock>Memory:</TextBlock>
                <TextBlock Margin="30, 10, 0, 10" x:Name="MemUsage"></TextBlock>
                <TextBlock Margin="30, 10, 0, 10" x:Name="XMemUsage"></TextBlock>
                <TextBlock>Other:</TextBlock>
                <TextBlock Margin="30, 10, 0, 10" x:Name="IdProcess"></TextBlock>
                <TextBlock Margin="30, 10, 0, 10" x:Name="StartTime"></TextBlock>
                <Button Click="RefreshTaskManagerButton_Click">Refresh</Button>
            </StackPanel>

        </ContentDialog>
    </Grid>
</Page>

